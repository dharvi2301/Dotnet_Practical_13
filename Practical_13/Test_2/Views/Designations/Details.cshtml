﻿@model Test_2.Models.Designation

@{
    ViewBag.Title = "Designation Details";
}

<div class="container mt-4">
    <div class="card shadow-lg">
        <div class="card-header bg-primary text-white">
            <h4 class="text-center">Designation Details</h4>
        </div>
        <div class="card-body">
            <dl class="row">
                <dt class="col-sm-4 font-weight-bold">Designation Name:</dt>
                <dd class="col-sm-8">@Html.DisplayFor(model => model.Name)</dd>
            </dl>
        </div>
        <div class="card-footer text-center">
            @Html.ActionLink("Edit", "Edit", new { id = Model.Id }, new { @class = "btn btn-warning px-4" })
            @Html.ActionLink("Back to List", "Index", null, new { @class = "btn btn-secondary px-4" })
        </div>
    </div>
</div>

<script src="~/Scripts/jquery-1.10.2.min.js"></script>
<script src="~/Scripts/jquery.validate.min.js"></script>
<script src="~/Scripts/jquery.validate.unobtrusive.min.js"></script>