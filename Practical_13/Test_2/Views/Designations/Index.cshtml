﻿@model IEnumerable<Test_2.Models.Designation>

@{
    ViewBag.Title = "Designation List";
}

@Html.ActionLink("Back To Employee", "Index", "Employees", null, new { @class = "btn btn-success m-3" })

<div class="container mt-4">
    <div class="card shadow-lg">
        <div class="card-header bg-primary text-white">
            <h4 class="text-center">Designation List</h4>
        </div>
        <div class="card-body">
            <div class="text-right mb-3">
                @Html.ActionLink("Create New", "Create", null, new { @class = "btn btn-success px-4" })
            </div>

            <table class="table table-bordered table-hover">
                <thead class="thead-dark">
                    <tr>
                        <th>@Html.DisplayNameFor(model => model.First().Name)</th>
                        <th class="text-center">Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>@Html.DisplayFor(modelItem => item.Name)</td>
                            <td class="text-center">
                                @Html.ActionLink("Edit", "Edit", new { id = item.Id }, new { @class = "btn btn-warning btn-sm mx-1" })
                                @Html.ActionLink("Details", "Details", new { id = item.Id }, new { @class = "btn btn-info btn-sm mx-1" })
                                @Html.ActionLink("Delete", "Delete", new { id = item.Id }, new { @class = "btn btn-danger btn-sm mx-1" })
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>